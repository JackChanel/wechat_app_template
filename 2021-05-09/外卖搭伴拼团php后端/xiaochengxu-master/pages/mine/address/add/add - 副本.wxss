/* pages/mine/address/add/add.wxss */
.content form .section{
    display: flex;
    padding: 30rpx;
    align-items: center;
    border-bottom: 1px solid #ddd;
}
.content form .section view:first-child{
    width: 30vw;
}

.btn-area{
    margin-top: 40rpx;
}

.area-selected{
    color: red;
}


/*省市区文本框*/

/*弹窗主体*/
.modal-content{
    position:fixed;
    bottom:-285px;
    left : 0;
    width: 100%;
    height: 285px;
    margin-top:5px;
    background: #fff;
    z-index: 999;
}

/*遮罩层*/
.modal-mask{
    position:absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: .8;
    z-index: 99;
}

/*弹窗头部*/
.modal-header{
    margin: 2px 0;
    font-size: 16px;
    color: #666;
    display: flex;
    justify-content: space-between;
    line-height: 30px;
}

/*所在地区样式*/
.modal-title{
    width: 100%;
    text-align: center;
}

/*关闭按钮*/
.modal-close{
    width: 20px;
}

.modal-body{
    font-size:14px;
}

/*每级地区标题*/
.viewpager-title{
    padding: 0 10px;
    /*color:#f03118;*/
    line-height: 30px;
}

/*分割线*/
.viewpager-divider{
    width: 100%;
    height: 1px;
    background: #ccc;
}

/*左右滑动控件*/
.swiper-area {
	height:220px;
}


/*地址列表ListView容器*/
.viewpager-listview {
	padding-top: 5px;
	height: 100%;
}

/*每行地址*/
.viewpager-listview view{
    line-height: 30px;
    padding: 0 10px;
}

/*初始隐藏*/
.hide{
    display: none;
}

/*运行时显示*/
.show{
    display: block;
}

